#!/usr/bin/python

import os

config = {
    'raul': ['goalie.py', 1],
    'cech': ['kicker.py', 2],
    'messi': ['kicker.py', 3],
}

other = '--red --daemonize'

def run(x):
    print "running %s" % x
    os.system(x)

for ip, (filename, jersey) in config.items():
    run('ssh root@%s /home/root/burst/lib/players/%s --jersey %s %s' % (ip, filename, jersey, other))

